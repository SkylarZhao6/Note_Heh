<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/links'); %>
    <link rel="stylesheet" href="/style/note.css">
    <title>Edit Note</title>
</head>
<body>
    <%- include('./partials/header'); %>

    <h1>Adding new note for: "<%= notebook.title %>"</h1>

    <form method="POST" action="/secure/newnotebook/<%= notebook_id %>" enctype="multipart/form-data">
        <textarea id="title" name="noteTitle" placeholder="Enter title here..." required></textarea>
        </br>

        <textarea id="content" name="note" placeholder="Enter content here..."></textarea>  
        
        <!-- upload image in note -->
        <a id="addImg" class="menuitem on">
            <i class="fas fa-images" onclick="openOverlay()"></i>
        </a>
        </br>
            
        <div id="myOverlay" class="overlay">
            <i class="fas fa-times closebtn" onclick="closeOverlay()"></i>
            <div class="overlay-content">
                <input class="hardbtn" type="file" name="noteImage"/>
                </br>
                <button class="btn02" type="submit">Save Image</button>
            </div>
        </div>

        <button type="submit" class="hardbtn">
            <p>Save note</p>
        </button>
    </form>

    <%- include('./partials/noteFooter'); %>

<script>
    function openOverlay() {
        document.getElementById("myOverlay").style.display = "block";
    }
        
    function closeOverlay() {
        document.getElementById("myOverlay").style.display = "none";
    }
</script>
<script src="/src/goback.js"></script>
</body>
</html>